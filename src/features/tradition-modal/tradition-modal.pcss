.tradition-modal {
  position: fixed;
  top: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.2);
  backdrop-filter: blur(5px);
  width: 100%;
  height: 100vh;
  z-index: 100;
  padding: 200px 20px;

  .tradition-modal__container {
    background: var(--vt-c-white);
    border-radius: 10px;
    padding: 20px;
  }
}